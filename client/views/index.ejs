<%- include("navbar.ejs")%>

<div class="px-4 pt-2 my-2 pb-5 text-center todo-container">
    <p class="text-body-emphasis pt-5 heading-text">Save Your Work for <%= day%></p>
    <div class="col-lg-10 col-md-6 col-sm-12 mx-auto">
       <form action="/add-todo" method="post">
        <div class="input-group mb-3 pt-3 input-group-lg">
            <input type="text" class="form-control todo-input" name="inputText" placeholder="Save your work" aria-label="save your work" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Add</button>
        </div>
       </form>
        <div class="list-of-todos-container pt-4">
            <ul class="list-of-todos">
                <li class="todo-list">
                    <a class="todo-link" href="#">All Work</a>
                </li>
                <li class="todo-list">
                    <a class="todo-link" href="#">Pending</a>
                </li>
                <li class="todo-list">
                    <a class="todo-link" href="#">Completed</a>
                </li>
            </ul>

            <%listOfTodos.forEach((eachTodo) => {%>
                <div class="todo pt-3 mb-3 mt-5 p-4">
                    <div class="text-saved"><%= eachTodo.todoText%></div>
                    <div class="buttons pt-4">
                        <button type="button" class="btn btn-primary btn-sm">Edit</button>
                        <button type="button" class="btn btn-danger btn-sm">Delete</button>
                        <button type="button" class="btn btn-success btn-sm">Done</button>
                    </div>
                </div>
            <%});%>
            <hr class="mt-5 todo-hr">
            <div class="remove-btn mt-4 container">
                <div>
                    <div>
                        <button type="button" class="btn btn-danger remove-completed-btn">
                            <i class="fa-solid fa-trash-arrow-up"></i>
                            <span class="px-2">Remove Completed</span> 
                        </button>
                        <button type="button" class="btn btn-danger delete-everything-btn">
                            <i class="fa-solid fa-trash"></i>
                            <span class="px-2">Delete Everything</span>
                        </button>
                    </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>